@model SubscriptionManager.Models.ViewModels.Page<SubscriptionManager.Models.Domain.Plan>
@{
    ViewData["Title"] = "Plans (Admin)";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4">Plans</h2>
    <div>
        <a class="btn btn-outline-secondary btn-sm" asp-action="ExportCsv">Export CSV</a>
        <a class="btn btn-outline-secondary btn-sm" asp-action="ExportJson">Export JSON</a>
        <a class="btn btn-primary btn-sm" asp-action="Create">New Plan</a>
    </div>
</div>

<form class="row row-cols-lg-auto g-3 align-items-end mb-3" method="get">
    <div class="col-12">
        <label class="form-label">Search</label>
        <input type="text" name="Search" value="@Context.Request.Query["Search"]" class="form-control" placeholder="Name or cycle..." />
    </div>
    <div class="col-12">
        <label class="form-label">Billing Cycle</label>
        <select name="BillingCycle" class="form-select">
            <option value="">All</option>
            <option value="Monthly" selected="@(Context.Request.Query["BillingCycle"]=="Monthly")">Monthly</option>
            <option value="Yearly" selected="@(Context.Request.Query["BillingCycle"]=="Yearly")">Yearly</option>
        </select>
    </div>
    <div class="col-12">
        <label class="form-label">Sort By</label>
        <select name="SortBy" class="form-select">
            <option value="CreatedAt">Created</option>
            <option value="Name" selected="@(Context.Request.Query["SortBy"]=="Name")">Name</option>
            <option value="Price" selected="@(Context.Request.Query["SortBy"]=="Price")">Price</option>
        </select>
    </div>
    <div class="col-12">
        <label class="form-label">Direction</label>
        <select name="SortDir" class="form-select">
            <option value="desc">Desc</option>
            <option value="asc" selected="@(Context.Request.Query["SortDir"]=="asc")">Asc</option>
        </select>
    </div>
    <div class="col-12">
        <button class="btn btn-outline-primary">Apply</button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Cycle</th>
                <th>Price</th>
                <th>Duration</th>
                <th>Created</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model.Items)
        {
            <tr>
                <td>@p.PlanId</td>
                <td>@p.Name</td>
                <td><span class="badge bg-info-subtle border text-dark">@p.BillingCycle</span></td>
                <td>@p.Price.ToString("C")</td>
                <td>@p.DurationDays days</td>
                <td>@p.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@p.PlanId">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.PlanId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<partial name="~/Views/Shared/_Paging.cshtml" model="Model" />