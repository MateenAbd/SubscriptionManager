@model SubscriptionManager.Models.Domain.Plan
<div class="col">
    <div class="card h-100 shadow-sm">
        <div class="card-body d-flex flex-column">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="card-title mb-0">@Model.Name</h5>
                <span class="badge bg-secondary">@Model.BillingCycle</span>
            </div>
            <p class="card-text text-muted mb-3">@Model.Description</p>
            <div class="mt-auto d-flex justify-content-between align-items-center">
                <div class="fs-5 fw-semibold">@Model.Price.ToString("C")</div>
                <a class="btn btn-primary btn-sm" asp-controller="Subscriptions" asp-action="Create" asp-route-planId="@Model.PlanId">Choose</a>
            </div>
        </div>
    </div>
</div>