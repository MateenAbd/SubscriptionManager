@model SubscriptionManager.Models.ViewModels.Page<SubscriptionManager.Models.Domain.User>
@{
    ViewData["Title"] = "Users";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4">Users</h2>
    <a class="btn btn-primary btn-sm" asp-action="Create">New User</a>
</div>

<form class="row row-cols-lg-auto g-3 align-items-end mb-3" method="get">
    <div class="col-12">
        <label class="form-label">Search</label>
        <input type="text" name="Search" value="@Context.Request.Query["Search"]" class="form-control" placeholder="Name or email..." />
    </div>
    <div class="col-12">
        <label class="form-label">Sort By</label>
        <select name="SortBy" class="form-select">
            <option value="RegistrationDate">Registered</option>
            <option value="Email" selected="@(Context.Request.Query["SortBy"]=="Email")">Email</option>
            <option value="FirstName" selected="@(Context.Request.Query["SortBy"]=="FirstName")">First Name</option>
        </select>
    </div>
    <div class="col-12">
        <label class="form-label">Direction</label>
        <select name="SortDir" class="form-select">
            <option value="desc">Desc</option>
            <option value="asc" selected="@(Context.Request.Query["SortDir"]=="asc")">Asc</option>
        </select>
    </div>
    <div class="col-12">
        <button class="btn btn-outline-primary">Apply</button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Registered</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var u in Model.Items)
        {
            <tr>
                <td>@u.UserId</td>
                <td>@u.FirstName @u.LastName</td>
                <td>@u.Email</td>
                <td><span class="badge bg-secondary">@u.Role</span></td>
                <td>@u.RegistrationDate.ToString("yyyy-MM-dd")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@u.UserId">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@u.UserId">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@u.UserId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<partial name="~/Views/Shared/_Paging.cshtml" model="Model" />