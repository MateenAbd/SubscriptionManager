@{
    ViewData["Title"] = "Error";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="h4 text-danger mb-3">Something went wrong</h1>
                    <p>We’re sorry, an unexpected error occurred. Please try again or contact support if the problem persists.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">Go Home</a>
                </div>
            </div>
        </div>
    </div>
</div>