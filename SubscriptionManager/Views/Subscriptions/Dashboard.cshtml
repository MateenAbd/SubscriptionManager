@model SubscriptionManager.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "My Dashboard";
}
<h2 class="h4 mb-3">Welcome, @Model.CurrentUser?.FirstName</h2>

<div class="row g-3">
    <div class="col-lg-6">
        <div class="card h-100 shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>My Subscriptions</span>
                <a class="btn btn-sm btn-primary" asp-action="Create">New</a>
            </div>
            <div class="card-body">
                @if (!Model.Subscriptions.Any())
                {
                    <p class="text-muted mb-0">No subscriptions yet.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead><tr><th>Plan</th><th>Status</th><th>End</th><th></th></tr></thead>
                            <tbody>
                            @foreach (var s in Model.Subscriptions)
                            {
                                <tr>
                                    <td>@s.PlanName</td>
                                    <td><span class="badge bg-light text-dark">@s.Status</span></td>
                                    <td>@s.EndDate.ToString("yyyy-MM-dd")</td>
                                    <td class="text-end">
                                        <a class="btn btn-outline-primary btn-sm" asp-action="Renew" asp-route-id="@s.SubscriptionId">Renew</a>
                                        <a class="btn btn-outline-danger btn-sm" asp-action="Cancel" asp-route-id="@s.SubscriptionId">Cancel</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card h-100 shadow-sm">
            <div class="card-header">Payment History</div>
            <div class="card-body">
                @if (!Model.Payments.Any())
                {
                    <p class="text-muted mb-0">No payments found.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead><tr><th>Date</th><th>Amount</th><th>Status</th></tr></thead>
                            <tbody>
                            @foreach (var p in Model.Payments)
                            {
                                <tr>
                                    <td>@p.PaymentDate.ToString("yyyy-MM-dd")</td>
                                    <td>@p.Amount.ToString("C")</td>
                                    <td><span class="badge bg-light text-dark">@p.Status</span></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>